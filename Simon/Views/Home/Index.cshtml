}

<section class="banner">
    <div class="banner-img">
        <img src="~/assets/images/banner.jpg" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="bcontent-left">
                    <img src="~/assets/images/logo.png" alt="banner-logo" />
